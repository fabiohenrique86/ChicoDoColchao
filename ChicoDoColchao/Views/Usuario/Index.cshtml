@model ChicoDoColchao.Models.UsuarioModel

@{
    ViewBag.Title = "Usuário";
}

<h2><i class="glyphicon glyphicon-user" style="color: #ffff00" title="Usuário"></i> Usuário</h2>
<hr />
@using (Html.BeginForm("Login", "Usuario", FormMethod.Post, new { id = "UsuarioForm" }))
{
    <div class="form-group">
        @Html.TextBoxFor(x => x.Login, new { @class = "form-control", @placeholder = "Login" })
        @Html.ValidationMessageFor(x => x.Login)
    </div>
    <div class="form-group">
        @Html.TextBoxFor(x => x.Senha, new { @class = "form-control", @type= "password", @placeholder = "Senha" })
        @Html.ValidationMessageFor(x => x.Senha)
    </div>
    <div class="form-group">
        <button id="btnLogin" type="submit" class="btn btn-success">Login</button>
    </div>
}