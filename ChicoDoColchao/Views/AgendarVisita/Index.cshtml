@model ChicoDoColchao.Models.AgendarVisitaModel

@{
    ViewBag.Title = "Agendar Visita";
}
<div class="container" style="padding-bottom: 20px;">
    <h2><i class="glyphicon glyphicon-time" style="color: #ec971f" title="Agendar Visita"></i> Agendar Visita</h2>
    <hr />
    @using (Html.BeginForm("Agendar", "AgendarVisita", FormMethod.Post, new { id = "AgendarVisitaForm" }))
    {
        <div class="form-group">
            @Html.TextBoxFor(x => x.Nome, new { @class = "form-control", @placeholder = "Nome" })
            @Html.ValidationMessageFor(x => x.Nome)
        </div>
        <div class="form-group">
            @Html.DropDownListFor(x => x.LojaId, new SelectList(Model.Lojas, "LojaID", "NomeFantasia"), "Loja", new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.LojaId)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(x => x.DataHora, new { @class = "form-control", @placeholder = "Data/Hora" })
            @Html.ValidationMessageFor(x => x.DataHora)
        </div>
        <div class="form-group">
            <button id="btnAgendar" type="submit" class="btn btn-success">Agendar</button>
        </div>
    }
</div>
