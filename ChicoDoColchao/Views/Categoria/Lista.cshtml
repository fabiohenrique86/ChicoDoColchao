@{
    ViewBag.Title = "Categoria - Lista";
}
@section scripts
{
    <script type="text/javascript">

        $(document).ready(function () {

            var tbCategoria = $("#tbCategoria").DataTable({
                "ordering": false,
                "pageLength": 10,
                "language": {
                    "lengthMenu": "_MENU_ registros por página",
                    "zeroRecords": "Sem registros a serem exibidos",
                    "info": "Página _PAGE_ de _PAGES_",
                    "infoEmpty": "Sem registros a serem exibidos",
                    "infoFiltered": "(filtrados de _MAX_ total de registros)",
                    "sSearch": "Pesquisar",
                    "oPaginate": { "sNext": "Próximo", "sPrevious": "Anterior", "sFirst": "Primeiro", "sLast": "Último" }
                },
                "columns":
                [
                    { "data": "Descricao", "className": "text-center" }
                ]
            });

            $.getJSON("/Categoria/Listar", function (data) {
                tbCategoria.clear();
                tbCategoria.rows.add(data).draw();
            });

            $("#btnCadastrar").click(function () {
                window.location.href = "/Categoria/Cadastro";
            });

        });
    </script>
}
<div class="container">
    <h2><i class="glyphicon glyphicon-list" style="color: #0f3456" title="Categorias"></i> Lista de Categorias</h2>
    <hr />
    <div class="form-group">
        <div class="table-responsive">
            <table id="tbCategoria" class="table nowrap">
                <thead>
                    <tr>
                        <td class="text-center" style="width: 100%"><b>Categoria</b></td>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
    <div class="form-group">
        <button id="btnCadastrar" type="button" class="btn btn-info">Cadastrar Nova Categoria</button>
    </div>
</div>