@model ChicoDoColchao.Models.ContatoModel

@{
    ViewBag.Title = "Contato";
}

<h2><i class="glyphicon glyphicon-envelope" style="color: #31b0d5" title="Contato"></i> Contato</h2>
<hr />
@using (Html.BeginForm("Enviar", "Contato", FormMethod.Post, new { id = "ContatoForm" }))
{
    <div class="form-group">
        @Html.TextBoxFor(x => x.Nome, new { @class = "form-control", @placeholder = "Nome" })
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="form-group">
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "E-mail (ex: seuemail@provedor.com.br)" })
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-group">
        @Html.DropDownListFor(x => x.AssuntoId, new SelectList(Model.Assuntos, "IdAssunto", "DsAssunto"), "Assunto", new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.AssuntoId)
    </div>
    <div class="form-group">
        @Html.TextAreaFor(x => x.Mensagem, new { @class = "form-control", @placeholder = "Mensagem" })
        @Html.ValidationMessageFor(x => x.Mensagem)
    </div>
    <div class="form-group">
        <button id="btnEnviarContato" type="submit" class="btn btn-success">Enviar</button>
    </div>
}